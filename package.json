{
  "name": "figma-font-toolkit",
  "version": "1.0.0",
  "description": "A minimal Figma plugin for font management and replacement",
  "license": "MIT",
  "author": "Font Toolkit Team",
  "scripts": {
    "build": "build-figma-plugin --typecheck --minify",
    "watch": "build-figma-plugin --typecheck --watch"
  },
  "dependencies": {
    "@capsizecss/core": "^4.0.0",
    "@capsizecss/metrics": "^2.0.0",
    "@create-figma-plugin/ui": "^3.2.0",
    "@create-figma-plugin/utilities": "^3.2.0",
    "preact": "^10.23.1"
  },
  "devDependencies": {
    "@create-figma-plugin/build": "^3.2.0",
    "@create-figma-plugin/tsconfig": "^3.2.0",
    "@figma/plugin-typings": "^1.90.0",
    "typescript": "^5.3.3"
  },
  "figma-plugin": {
    "editorType": [
      "figma"
    ],
    "id": "font-toolkit",
    "name": "Font Toolkit",
    "main": "src/main.ts",
    "ui": "src/ui.tsx",
    "relaunchButtons": {
      "open": {
        "name": "Open Font Toolkit",
        "main": "src/main.ts"
      }
    }
  }
}
